# =============================================================================
# flow-matrx backend — environment variables
# Copy to .env and fill in real values. Never commit .env.
# =============================================================================

# App
APP_ENV=development
SECRET_KEY=change-me-in-production
ALLOWED_ORIGINS=["http://localhost:5173"]

# =============================================================================
# Database — consumed by register_database_from_env(env_prefix="DB")
# =============================================================================
DB_HOST=db.your-supabase-project.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-db-password

# =============================================================================
# Schema generation — only needed when running db/generate.py
# =============================================================================
# Required: absolute path to this Python project root
MATRX_PYTHON_ROOT=/absolute/path/to/flow-matrx/backend
# MATRX_SAVE_DIRECT=true   # set to true to write files directly (bypasses git check)

# =============================================================================
# Supabase (auth)
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_JWT_SECRET=your-jwt-secret

# =============================================================================
# Redis (arq task queue)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# LLM providers
# =============================================================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
